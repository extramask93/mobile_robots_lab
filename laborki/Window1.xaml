<Window x:Class="laborki.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:laborki"
        mc:Ignorable="d"
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp"
        Title="Arrows" Height="227.557" Width="375.852">
    <Grid>
        <Canvas Name="canvas1" HorizontalAlignment="Left" Background="Black" Height="200" VerticalAlignment="Top" Width="368" Margin="0,0,0,-3">
            <Label Content="Press arrows " Foreground="White" FontSize="42" Height="103" Canvas.Left="53" Canvas.Top="107" Width="338"/>
            <Label Name="labell" Content="{Binding leftEngine}"  Foreground="White" Height="24" Canvas.Left="10" Canvas.Top="40" Width="102"/>
            <Label Name='labelr' Content="{Binding rightEngine}" Foreground="White" Height="24" Canvas.Left="233" Canvas.Top="39" Width="125"/>
            <Label x:Name="labell_Copy" Content="Left Motor Speed:"  Foreground="White" Height="31" Canvas.Left="10" Canvas.Top="4" Width="108"/>
            <Label x:Name="labell_Copy1" Content="Right Motor Speed:"  Foreground="White" Height="31" Canvas.Left="244" Canvas.Top="4" Width="114"/>
        </Canvas>

    </Grid>
</Window>
